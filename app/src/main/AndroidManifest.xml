<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mschneider.patiently">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Patiently">
        <activity android:name=".ui.activities.report.ReportsActivity"></activity>
        <activity android:name=".ui.activities.appointment.AppointmentsActivity" />
        <activity android:name=".ui.activities.physician.PhysiciansActivity" />
        <activity android:name=".ui.activities.patient.PatientsActivity" />
        <activity android:name=".ui.activities.login.LoginActivity" />
        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>